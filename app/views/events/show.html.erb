<script type="text/javascript">

$(document).ready(function() {
$("#gender_start").click(function() {
  $("#gender").replaceWith('<div id="gender"><img src="../images/ajax-loader.gif" /></div>')
   $.ajax({
  url: '../extrainfo/<%= @event.fb_id %>',
  success: function(data) {
   $("#gender").replaceWith(data);
  }
});
  
});


$("#gender_login").click(function() {

  apprise('<h2><%= t("dialogs.login") %></h2><%= link_to image_tag('login.png'), @auth_url, :class=>"button"%>');
});




});



</script>



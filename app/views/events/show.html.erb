<script type="text/javascript">
var ajax = true;
var added = false;
<% if @user %>
  <% if @user.events.exists?(@event) %>
    added = true;
  <% end %>
<% end %>

$(document).ready(function() {

$("#gender_start").click(function() {
  $("#gender").replaceWith('<div id="gender"><img src="../assets/ajax-loader.gif" /></div>')
   $.ajax({
  url: '../extrainfo/<%= @event.fb_id %>',
  success: function(data) {
   $("#gender").replaceWith(data);
  }
});
  
});

<% if session[:user_id] %>
$("#gender").replaceWith('<div id="gender"><img src="../assets/ajax-loader.gif" /></div>')
   $.ajax({
  url: '../extrainfo/<%= @event.fb_id %>',
  success: function(data) {
   $("#gender").replaceWith(data);
  }
});

<% end %>


$("#gender_login").click(function() {

  apprise('<legend><%= t("dialogs.login") %></legend><%= link_to image_tag('login.png'), @auth_url, :class=>"button"%>');
});

$("#add").click(function() {
  if(ajax){
    if(!added){
      ajax = false;
      $('.btn').button('loading');

      $.ajax({
        url: '../add_to_list/<%= @event.id %>',
        success: function(data) {
          $('.btn').button('reset');
          $('.btn').text('<%= t('personal.remove') %>');
          ajax = true;
          added = true;
        }
      });
    }
    else{
      ajax = false;
      $('.btn').button('loading');

      $.ajax({
        url: '../remove_from_list/<%= @event.id %>',
        success: function(data) {
          $('.btn').button('reset');
          $('.btn').text('<%= t('personal.add') %>');
          ajax = true;
          added = false;
        }
      });
    }
  }
});

});
</script>

